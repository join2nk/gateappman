let title = 'GATEMAN'
let data = gatedata

let trucks = [
  {truckno:'cg04jb2834',name:'kaliasdfam'},
  {truckno:'cg04jb2834',name:'kalim'},
  {truckno:'cg04jb2834',name:'kalim'}
]
let trucksincampus = [
  {truckno:'cg04jb2834',name:'kaliasdfam'},
  {truckno:'cg04jb2834',name:'kalim'},
  {truckno:'cg04jb2834',name:'kalim'}
]
let items =['list','of','items']
let units =['list','of','units']
let partyLedgers =['list','of','parties']
let hemal=['list','of','hemal','group']

%>

<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="shortcut icon" href="/assets/img/favicon.ico" type="image/x-icon">
  <link rel="icon" href="/assets/img/favicon.ico" type="image/x-icon">
  <link rel="manifest" href='<%= manifestFileLink %> '>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="gateman/styles.css">

  <title>GATE APP</title>
</head>

<body>
  <!-- nav va -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">

      <a class="navbar-brand h1" href="/">GATEMAN</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02"
        aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">

        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Admin</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="#">Logout</a>
          </li>
        </ul>

        <form class="d-flex">
          <select class="w-50 me-2 border-1 border-secondary rounded-2" name="" id="">
            <option value="GP">GP NO</option>
            <option value="GP">Party</option>
            <option value="GP">Broker</option>
            <option value="GP">GP NO</option>
            <option value="GP">GP NO</option>
          </select>
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>

      </div>
    </div>
  </nav>

  <center class="mt-5">

    <form id="inform" action="/gateman/truckin" method="post" class="card m-2 p-2 d-none"
      style="width: 80%;text-align: left;" autocomplete="off">
      <h2>IN</h2>
      <div class="d-inline">
        truck number * <div class='informbtn py-0 btn btn-primary m-1 float-end'>select</div> <br>
      </div>
      <input type="text" name="truckNo" required><br>
      <input id="truckNo"></input><br>
      <textarea name="narration" id="" cols="30" rows="5"></textarea><br>
      <input type="submit" value="IN">
    </form>

    <form id="outform" action="/gateman/truckin" method="post" class="card m-2 p-2 d-none"
      style="width: 80%;text-align: left;" autocomplete="off">
      <h2>OUT</h2>
      <div class="d-inline">
        truck number *<div class='outformbtn py-0 btn btn-primary m-1 float-end'>select</div> <br>
      </div>
      <input type="text" name="truckNo" required><br>
      <input id="truckNo"></input><br>
      Narration: <br>
      <textarea name="narration" id="" cols="30" rows="5"></textarea><br>
      <input type="submit" value="OUT">
    </form>


    <div class="trucknosearchdiv card m-2 p-2 w-80 bg-secondary bg-opacity-10 d-none">
      <h3>Saved Truck </h3>
      <hr>

      <input class="trucknosearchinput input-group-text mb-2" type="text" name="" id="" placeholder="Search">
      <table class="table table-light shadow">
        <thead>
          <tr class="thead">
            <td>
              NAME
            </td>
            <td>
              TRUCK NO
            </td>
          </tr>
        </thead>
        <tbody>
          <% trucks.forEach(truck => { %>
          <tr class="<%= truck.truckno %> ">
            <td>
              <%= truck.name %>
            </td>
            <td>
              <%= truck.truckno %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>




    <div class="inoutbtn card m-2 p-2" style="width: 80%;">
      <h3> Truck Gate</h3>
      <hr>
      <div class='inbtn py-0 btn btn-success py-3 m-5 mt-3  fw-bold'>IN</div>
      <div class='outbtn py-0 btn btn-warning py-3 m-5 fw-bold'>OUT</div>
    </div>

  </center>










  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
  </script>
  <script src="gateman/scripts.js"></script>
</body>

</html>